create database <%= @db_name %>;
<% if @db_passwd_hash != nil %>
create user '<%= @db_user %>'@'localhost' identified with mysql_native_password as '<%= @db_passwd_hash %>';
<% else %>
create user '<%= @db_user %>'@'localhost' identified by '<%= @db_passwd %>';
<% end %>
grant all on <%= @db_name %>.* to '<%= @db_user %>'@'localhost';
flush privileges;
